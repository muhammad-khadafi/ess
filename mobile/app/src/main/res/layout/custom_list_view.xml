<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGraylight"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".ViewLog">

        <TextView
            android:id="@+id/textDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:text="02-09-2019 | 8 Hours, 1 Minutes"
            android:textColor="#444444"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:text="Clock-In : "
            android:textColor="#444444"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/textClockIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:text="10:07 | C Building, Fasilkom UI,, Pondok Cina, Kecamatan Beji, Kota Depok, Jawa Barat 16424, Indonesia"
            android:textColor="#444444"
            android:textSize="21sp"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:text="Clock-Out : "
            android:textColor="#444444"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/textClockOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:text="17:07 | C Building, Fasilkom UI,, Pondok Cina, Kecamatan Beji, Kota Depok, Jawa Barat 16424, Indonesia"
            android:textColor="#444444"
            android:textSize="21sp"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:text="Activity : "
            android:textColor="#444444"
            android:textSize="21sp" />

        <EditText
            android:id="@+id/editTextActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#444444"
            android:textSize="21sp"
            android:textStyle="italic"/>

        <Button
            android:id="@+id/btnUpdateActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_style_clock_in"
            android:text="update activity"
            android:textColor="#FFF" />


    </LinearLayout>
</ScrollView>